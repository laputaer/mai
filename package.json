{
  "name": "mai",
  "version": "1.3.1",
  "description": "mai codebase",
  "main": "index.js",
  "scripts": {
    "test": "mocha components/tests/",
    "report": "babel-istanbul cover _mocha -- -R spec components/tests/",
    "start": "NODE_ENV=production node index.js",
    "setup": "npm install && npm run build:css && npm run build:js && npm run build:svg && npm run build:img && npm run migration",
    "migration": "node migration/migration.js",
    "local": "sudo NODE_ENV=local node index.js",
    "dev:be": "sudo NODE_ENV=development nodemon --ext js --ignore components/client-js/ --watch components/ --watch index.js index.js",
    "dev:fe": "npm run watch:reload & npm run watch:css & npm run watch:js & npm run watch:svg",
    "watch:reload": "DEBUG=wiper wiper -p 30001 -w public/assets/\\*\\*/\\* --cert=ssl.crt --key=ssl.key",
    "watch:css": "DEBUG=onchange onchange components/client-less/\\*\\*/\\*.less components/client-less/\\*.less -- npm run build:css",
    "watch:js": "DEBUG=onchange onchange components/client-js/\\*\\*/\\*.js components/client-js/\\*.js components/templates/\\*\\*/\\*.js components/templates/\\*.js components/i18n/\\*.js -- npm run build:js",
    "watch:svg": "DEBUG=onchange onchange components/client-svg/\\*\\*/\\*.svg -- npm run build:svg",
    "build:css": "lessc components/client-less/main.less | autoprefixer | cleancss -o public/assets/app.css",
    "build:js": "browserify components/client-js/main.js -s app | uglifyjs > public/assets/app.js && cp ./components/client-js/vendor.js ./public/assets/vendor.js",
    "build:svg": "svgo --enable=removeDesc --multipass -f components/client-svg/ && svgshelf components/client-svg/\\*.svg public/assets/icons.svg",
    "build:img": "trash --force public/assets/*.jpg && imagemin -p components/client-image/* public/assets/",
    "cron:cache:all": "find ./cache/ -maxdepth 1 -type f -not -name .gitignore -exec rm -fv {} + | wc -w",
    "cron:cache:old": "find ./cache/ -maxdepth 1 -type f -mtime +7 -not -name .gitignore -exec rm -fv {} + | wc -w",
    "cron:ap:all": "node cron/action-point-recovery.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitinn/mai.git"
  },
  "keywords": [
    "mai",
    "beginhq"
  ],
  "author": "David Frank",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitinn/mai/issues"
  },
  "homepage": "https://github.com/bitinn/mai",
  "devDependencies": {
    "autoprefixer": "5.1.1",
    "babel": "5.4.4",
    "babel-istanbul": "0.1.8",
    "browserify": "10.0.0",
    "chai": "2.3.0",
    "clean-css": "3.2.7",
    "co-mocha": "1.1.0",
    "imagemin": "3.1.0",
    "less": "2.5.0",
    "mocha": "2.2.4",
    "nodemon": "1.3.7",
    "onchange": "1.1.0",
    "sinon": "1.14.1",
    "sinon-chai": "2.7.0",
    "svgo": "0.5.1",
    "svgshelf": "1.0.3",
    "trash": "1.4.1",
    "uglify-js": "2.4.20",
    "wiper": "1.1.0"
  },
  "dependencies": {
    "cheerio": "0.19.0",
    "co": "4.5.4",
    "csrf": "3.0.0",
    "cuid": "1.2.5",
    "deep-extend": "0.4.0",
    "dom-delegator": "13.1.0",
    "escape-string-regexp": "1.0.3",
    "grant-koa": "3.3.1",
    "he": "0.5.0",
    "iconv": "2.1.7",
    "js-beautify": "1.5.5",
    "koa": "0.21.0",
    "koa-bodyparser": "2.0.0",
    "koa-compose": "2.3.0",
    "koa-flash": "1.0.0",
    "koa-livereload": "0.1.23",
    "koa-logger": "bitinn/logger#fix-length",
    "koa-mount": "1.3.0",
    "koa-router": "5.0.1",
    "koa-sendfile": "1.1.1",
    "koa-session": "3.1.0",
    "koa-static": "1.4.9",
    "lgtm": "1.0.4",
    "mime-types": "2.0.12",
    "mz": "1.3.0",
    "node-fetch": "1.2.1",
    "node-polyglot": "0.4.1",
    "purest": "1.1.4",
    "sharp": "0.10.0",
    "then-redis": "1.3.0",
    "validator": "3.40.0",
    "vdom-to-html": "2.1.0",
    "vdom-virtualize": "bitinn/vdom-virtualize#special-case",
    "virtual-dom": "2.0.1",
    "xss-filters": "1.1.2",
    "yieldb": "2.4.1"
  },
  "engines": {
    "iojs": ">= 1.8.0",
    "node": ">= 0.12.0"
  }
}
