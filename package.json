{
  "name": "mai",
  "version": "1.0.1",
  "description": "mai codebase",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/",
    "start": "node index.js",
    "setup": "npm install && npm run build:css && npm run build:js && npm run build:svg && npm run build:img",
    "migration": "node migration/migration.js",
    "local": "NODE_ENV=local node index.js",
    "dev:be": "NODE_ENV=dev nodemon --ext js --ignore components/client-js/ --watch components/ --watch index.js index.js",
    "dev:fe": "npm run watch:reload & npm run watch:css & npm run watch:js & npm run watch:svg",
    "watch:reload": "DEBUG=wiper wiper -p 30001 -w public/assets/\\*\\*/\\*",
    "watch:css": "DEBUG=onchange onchange components/client-less/\\*\\*/\\*.less components/client-less/\\*.less -- npm run build:css",
    "watch:js": "DEBUG=onchange onchange components/client-js/\\*\\*/\\*.js components/client-js/\\*.js components/templates/\\*\\*/\\*.js components/templates/\\*.js components/i18n/\\*.js -- npm run build:js",
    "watch:svg": "DEBUG=onchange onchange components/client-svg/\\*\\*/\\*.svg -- npm run build:svg",
    "build:css": "lessc components/client-less/main.less | autoprefixer | cleancss -o public/assets/app.css",
    "build:js": "browserify components/client-js/main.js -s app | uglifyjs > public/assets/app.js",
    "build:svg": "svgo --enable=removeDesc --multipass -f components/client-svg/ && svgshelf components/client-svg/\\*.svg public/assets/icons.svg",
    "build:img": "trash --force public/assets/*.jpg && imagemin -p components/client-image/* public/assets/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitinn/mai.git"
  },
  "keywords": [
    "mai",
    "beginhq"
  ],
  "author": "David Frank",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitinn/mai/issues"
  },
  "homepage": "https://github.com/bitinn/mai",
  "devDependencies": {
    "autoprefixer": "5.1.0",
    "browserify": "9.0.3",
    "clean-css": "3.1.8",
    "imagemin": "3.1.0",
    "less": "2.4.0",
    "mocha": "2.2.1",
    "nodemon": "1.3.7",
    "onchange": "1.0.0",
    "svgo": "0.5.0",
    "svgshelf": "1.0.3",
    "trash": "1.4.1",
    "uglify-js": "2.4.17",
    "wiper": "1.0.3"
  },
  "dependencies": {
    "co": "4.5.2",
    "deep-extend": "0.3.3",
    "escape-string-regexp": "1.0.3",
    "grant-koa": "3.1.0",
    "html-to-vdom": "0.5.5",
    "js-beautify": "1.5.5",
    "koa": "0.19.1",
    "koa-bodyparser": "1.5.0",
    "koa-compose": "2.3.0",
    "koa-flash": "1.0.0",
    "koa-livereload": "0.1.23",
    "koa-logger": "1.2.2",
    "koa-mount": "1.3.0",
    "koa-router": "4.3.2",
    "koa-session": "3.1.0",
    "koa-static": "1.4.9",
    "node-polyglot": "0.4.1",
    "purest": "1.1.4",
    "then-redis": "1.3.0",
    "validator": "3.37.0",
    "vdom-to-html": "2.0.0",
    "virtual-dom": "2.0.1",
    "xss": "0.1.21",
    "yieldb": "2.3.1"
  },
  "engines": {
    "iojs": ">= 1.5.0",
    "node": ">= 0.12.0"
  }
}
